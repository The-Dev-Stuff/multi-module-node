{
  "compilerOptions": {
    "target": "ES2020",        // Target modern JavaScript
    "module": "ESNext",        // Use ES6 modules
    "moduleResolution": "Node",
    "declaration": true,       // Generate .d.ts files for type definitions
    "outDir": "./dist",        // Output folder for compiled files
    "strict": true,            // Enable strict type-checking
    "esModuleInterop": true    // Ensure compatibility with CommonJS modules
  },
  "include": ["src/**/*"]
}
